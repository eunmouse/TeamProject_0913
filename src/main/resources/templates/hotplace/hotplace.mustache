    <script>



        //사진 슬라이드 & 좋아요
        function toggleLike(button) {
            const svg = button.querySelector('svg');
            const isLiked = svg.style.fill === "red";
            if (isLiked) {
                svg.style.fill = "none";
                console.log("좋아요 해제됨");
            } else {
                svg.style.fill = "red";
                console.log("좋아요 체크됨");
            }
        }

        function showSlide(index, button) {
            console.log('Button clicked:', button);  // 클릭된 버튼 확인
            const card = button.closest('.hot__place__card');
            if (!card) {
                console.error('Card not found');
                return;
            }

            console.log('Card found:', card);  // 찾은 카드 확인
            const images = card.querySelectorAll('img');
            const dots = card.querySelectorAll('.dots button');

            if (images.length === 0 || dots.length === 0) {
                console.error('Images or dots not found in the card.');
                return;
            }

            images.forEach((img, i) => {
                img.classList.toggle('active', i === index);
                dots[i].classList.toggle('active', i === index);
            });
        }



        //모달창

        // 지역 데이터
        const areas = [
            '전체', '강남구', '도봉구', '동대문구', '동작구', '마포구', '서대문구',
            '서초구', '성동구', '성북구', '송파구', '양천구', '강동구', '영등포구',
            '용산구', '은평구', '종로구', '중구', '중랑구', '강북구', '강서구',
            '관악구', '광진구', '구로구', '금천구', '노원구'
        ];

        // 모달 관련 요소들
        const modal = document.getElementById("modal");
        const openModalBtn = document.getElementById("openModal");
        const closeModal = document.querySelector(".close");
        const areaSelectionDiv = document.getElementById("area-selection");
        const searchBtn = document.getElementById("searchBtn");

        // 모달 열기
        openModalBtn.onclick = function () {
            modal.style.display = "block";

            // 모달이 열릴 때 기본적으로 "전체"가 선택된 상태로 만듬
            document.querySelectorAll(".area-btn").forEach(button => {
                button.classList.remove("selected");
                if (button.textContent === '전체') {
                    button.classList.add("selected");
                }
            });
        }

        // 모달 닫기 (X 버튼 클릭 시)
        closeModal.onclick = function () {
            modal.style.display = "none";
        }

        // 화면 클릭 시 모달 닫기
        window.onclick = function (event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }

        // 지역 버튼 동적으로 생성
        areas.forEach(area => {
            const button = document.createElement("button");
            button.classList.add("area-btn");
            button.textContent = area;

            // "전체"를 기본적으로 선택된 상태로 설정
            if (area === '전체') {
                button.classList.add("selected");
            }

            // 버튼 선택/해제 기능 (토글)
            button.addEventListener("click", () => {
                // "전체" 버튼을 클릭한 경우
                if (button.textContent === '전체') {
                    document.querySelectorAll(".area-btn").forEach(btn => {
                        if (btn.textContent !== '전체') {
                            btn.classList.remove("selected"); // 나머지 해제
                        }
                    });
                    button.classList.add("selected"); // "전체" 선택
                }
                // "전체" 이외의 버튼을 클릭한 경우
                else {
                    button.classList.toggle("selected"); // 해당 버튼 토글
                    document.querySelector(".area-btn:first-child").classList.remove("selected"); // "전체" 해제

                    // 아무 버튼도 선택되지 않은 경우 "전체" 선택
                    const selectedAreas = document.querySelectorAll(".area-btn.selected");
                    if (selectedAreas.length === 0) {
                        document.querySelector(".area-btn:first-child").classList.add("selected"); // "전체" 다시 선택
                    }
                }
            });

            areaSelectionDiv.appendChild(button);
        });

        // 검색 버튼 클릭 시 선택된 지역 반환
        searchBtn.addEventListener("click", () => {
            const selectedAreas = [];
            document.querySelectorAll(".area-btn.selected").forEach(button => {
                selectedAreas.push(button.textContent);
            });

            // 선택된 지역 반환
            alert(`선택된 지역: ${selectedAreas.join(', ')}`);
            modal.style.display = "none"; // 검색 후 모달 닫기
        });
    </script>
